<h1>Login</h1>

<% if flash.keys.include? 'alert' %>
  <%= flash[:alert] %><br>
<% end %>

<%= form_for 'user', url: 'login' do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field 'name' %><br><br>

  <%= f.label :password %><br>
  <%= f.text_field 'password' %><br><br>

  <%= f.submit 'Signup'%>
<% end %>
